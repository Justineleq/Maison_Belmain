{% extends 'base.html.twig' %}

{% block title %}Recipe Of The Month{% endblock %}

{% block body %}
    <h1>RecipeOfTheMonth</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe_of_the_month.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe_of_the_month.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ recipe_of_the_month.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe_of_the_month.description }}</td>
            </tr>
            <tr>
                <th>Selected</th>
                    {% if recipe_of_the_month.selected %}
                        <span>Yes</span> {# or display an icon, e.g., checkmark #}
                    {% else %}
                        <span>No</span>
                    {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_of_the_month_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('app_recipe_of_the_month_edit', {'id': recipe_of_the_month.id}) }}" class="btn btn-info">edit</a>

    {{ include('recipe_of_the_month/_delete_form.html.twig') }}
{% endblock %}

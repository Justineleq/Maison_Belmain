{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Specific Needs</th>
                <th>Total Price</th>
                <th>Order Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.specificNeeds }}</td>
                <td>{{ order.totalPrice }}</td>
                <td>{{ order.orderStatus }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-warning">show</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}" class="btn btn-success">Create new</a>
{% endblock %}
